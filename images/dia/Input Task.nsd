			<qWhile>
				<instruction text="&#34;sleep();&#34;" comment="&#34;&#34;" color="ffffff" rotated="0"></instruction>
			</qWhile>
		</while>
		<instruction text="&#34;audioBuffer = reserveAudioBuffer(audioBufferPool);&#34;" comment="&#34;&#34;" color="ffffff" rotated="0"></instruction>
		<while text="&#34;true&#34;" comment="" color="ffffff">
			<qWhile>
				<instruction text="&#34;received = recordAudio(audioBuffer);&#34;" comment="&#34;&#34;" color="ffffff" rotated="0"></instruction>
